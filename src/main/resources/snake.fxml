<?xml version="1.0" encoding="UTF-8"?>

<?language javascript?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<GridPane fx:id="mainGrid" 
          alignment="top_left" 
          hgap="10" 
          onKeyPressed="#keyPressed" 
          prefHeight="363.0" 
          prefWidth="505.0" 
          vgap="10" 
          xmlns="http://javafx.com/javafx/8.0.121" 
          xmlns:fx="http://javafx.com/fxml/1"
          
          fx:controller="com.pulsepoint.games.snake.ui.SnakeController">
    <padding>
        <Insets bottom="10" left="25" right="25" top="25" />
    </padding>
    
    <ComboBox fx:id="level" promptText="Level" GridPane.columnIndex="0" GridPane.rowIndex="0" prefWidth="120"/>
    
    <Button fx:id="start" onAction="#btnClick" text="Start" GridPane.columnIndex="1" GridPane.rowIndex="0" prefWidth="100"/>
    <Label fx:id="status" GridPane.columnIndex="2" GridPane.rowIndex="0" /> 
    
</GridPane>
